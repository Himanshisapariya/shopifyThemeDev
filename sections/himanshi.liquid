{% schema %}
    {
      "name": "himanshi",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Welcome to our store"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "This is a custom section."
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ],
      "presets": [
        {
          "name": "himanshi"
        }
      ]
    }
    {% endschema %}
    
    <div class="custom-section">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.text }}</p>
    {% if section.settings.image %}
        <div class="custom-content-image">
          <img src="{{ section.settings.image | image_url: width :500 }}" alt="image">
        </div>
      {% endif %} 


    </div>
    
    {% stylesheet %}
    <style>

    .custom-content-image{
      text-align: center;
      align-items: center;
      justify-content: center;
    }
      .custom-section {
        padding: 20px;
        background-color: #f8f8f8;
        border: 1px solid #e1e1e1;
      }
      .custom-section h2 {
        font-size: 24px;
        margin-bottom: 10px;
      }
      .custom-section p {
        font-size: 16px;
      }
    </style>
    {% endstylesheet %}
    