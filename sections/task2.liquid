{{ 'task2.css' | asset_url | stylesheet_tag }}

{%  schema  %} 
{
    "name" : "task2",
    "settings": [
        {
    "type" : "text",
    "label" : "Headline",
    "id" : "headline"
    }
    ],
    "blocks": [
    {
        "name" : "button",
        "type": "button",
        "settings": [
            {
                "type": "text",
                "id" : "customerProblem",
                "label": "customerProblem"
            },
            {
                "type": "text",
                "id" : "customerName",
                "label": "customerName"
            },
            {
                "type": "text",
                "id" : "buttontext",
                "label": "buttontext"
            },
            {
                "type": "text",
                "id" : "heading",
                "label": "heading"
            },
            {
                "type": "image_picker",
                "id" : "imageBefore",
                "label": "imageBefore"
            },
            {
                "type": "image_picker",
                "id" : "imageAfter",
                "label": "imageAfter"
            },
            {
                "type": "textarea",
                "id" : "content",
                "label": "content"
            }
        ]
    }
    ],
    "presets": [
    {
        "name": "task2"
    }
    ]
}
 {% endschema %} 

<div class="main-div">
    <div class="headline">
        {{ section.settings.headline }}
    </div>
    {%- for block in section.blocks -%}
        <div class="tab">
            <button>
            {{ block.settings.customerProblem }}
            </button>
        </div>
    {%- endfor -%}
    
    {%- for block in section.blocks -%}
    <div class="customDetail">
        <div class="customImage">
            <img src=" {{ block.settings.imageBefore |  image_url}}" alt="Image" class="customImage">
        </div>
        <div class="imageDetails">
            <div class="innerImageDetails">
                <div class="detailedHeadline">
                    {{ block.settings.heading }}
                </div>
                <div class="ratings">
                    {% comment %} <img src="../assets/images/ratings.png" alt="Ratings Image"> {% endcomment %}
                </div>
                <div class="content">
                    {{ block.settings.content }}
                </div>
            </div>
        </div>
    </div>
{%- endfor -%}

 </div>